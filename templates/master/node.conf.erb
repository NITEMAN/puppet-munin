[<%= @header %>]
<% if @ssh -%>
  address ssh://<%= @address %>/bin/nc localhost <%= @port %> -q 1
<% else -%>
  address <%= @address %>
<% end -%>
<% if @use_node_name -%>
  use_node_name yes
<% end -%>
<% if @contacts != '' -%>
  contacts <%= @contacts %>
<% end -%>
<% if ! @update -%>
  update no
<% end -%>
<% if @extra_configs -%>
<%   @extra_configs.each do |config| -%>
  <%= config %>
<%   end -%>
<% end -%>
